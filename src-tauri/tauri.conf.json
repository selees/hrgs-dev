{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hrgs",
  "version": "0.2.0",
  "identifier": "com.hrgs.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "HRGS-OSC",
        "width": 320,
        "height": 260,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}